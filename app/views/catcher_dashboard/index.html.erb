<h1>Catcher Dashboard</h1>

<h3>Pending Contracts</h3>
<ul>
<% @pending_contracts.each do |pc| %>
	<li><%= pc.id %><%= pc.description %> Pending  
	<%= link_to "view Contract", url_for(controller: :catcher_dashboard, action: :view_contract, contract_id: pc.id), method: :get %>
		
	</li>
<% end %>
</ul>

<h3>Completed Contracts</h3>
<ul>
<% @completed_contracts.each do |cc| %>
	<li><%= cc.id %><%= cc.description %> Completed 
	<%= link_to "view Contract", url_for(controller: :catcher_dashboard, action: :view_contract, contract_id: cc.id), method: :get %>
		
	</li>
<% end %>
</ul>

<%= link_to "Logout", logout_catcher_path %>